---
title: Liquid docs
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{{ title }}</title>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/jgthms/minireset.css@master/minireset.min.css">

  {% include "prism-nord.html" %}

  <link rel="stylesheet" href="/dist/build/liquid.css">

  <script type="module" src="/dist/build/liquid.esm.js"></script>
  <script nomodule src="/dist/build/liquid.js"></script>
</head>
<body>
<docs-layout>
<docs-nav>
  <navigation role="navigation" aria-label="Main">
    {% set navPages = collections.all | eleventyNavigation %}
    {% macro renderNavListItem(entry) -%}
      <li{% if entry.url == page.url %} class="my-active-class"{% endif %}>
        <a href="{{ entry.url | url }}">{{ entry.title }}</a>
        {%- if entry.children.length -%}
          <ul>
            {%- for child in entry.children %}{{ renderNavListItem(child) }}{% endfor -%}
          </ul>
        {%- endif -%}
      </li>
    {%- endmacro %}

    <ul>
      {%- for entry in navPages %}{{ renderNavListItem(entry) }}{%- endfor -%}
    </ul>
  </navigation>
</docs-nav>

<docs-main>
  <main id="main">
  {{ content | safe }}
  </main>
</docs-main>
<footer>
  <a href="https://github.com/emdgroup-liquid/liquid/blob/main/{{ page.inputPath }}">Edit this page on GitHub</a>
</footer>
</docs-layout>
</body>
</html>
